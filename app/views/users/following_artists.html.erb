<div class="container">
  <h1>フォローしているアーティスト</h1>
  <% if @artists.empty? %>
    <p>フォローしているアーティストはいません。</p>
  <% else %>
    <ul class="list-unstyled">
      <% @artists.each do |artist| %>
        <li class="mb-3">
          <%= link_to artist_path(artist), class: "d-flex align-items-center text-decoration-none" do %>
            <% if artist.profile&.profile_image_url&.url.present? %>
              <div style="width: 100px; height: 100px; border-radius: 50%; overflow: hidden; margin-right: 15px;">
                <%= image_tag artist.profile.profile_image_url.url, 
                              alt: "アイコン", 
                              class: "img-fluid", 
                              style: "width: 100%; height: 100%; object-fit: cover;" %>
              </div>
            <% end %>
            <span class="btn btn-info"><%= artist.name %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="pagination">
      <%= paginate @artists %>
    </div>
  <% end %>
</div>