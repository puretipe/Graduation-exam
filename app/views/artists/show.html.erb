<div class="container mt-4 text-center">
  <h1 class="mb-4"><%= @artist.name %> のプロフィール</h1>

  <div class="row justify-content-center">
    <div class="col-12 mb-3">
      <div class="d-flex justify-content-center">
        <% if @artist.profile.profile_image_url.present? %>
          <div style="width: 200px; height: 200px; border-radius: 50%; overflow: hidden;">
            <img src="<%= @artist.profile.profile_image_url %>" alt="Profile Image" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
          </div>
        <% else %>
          <p>プロフィール画像は設定されていません</p>
        <% end %>
      </div>
    </div>

    <div class="d-flex justify-content-center mb-3">
      <% if current_user && current_user.following.include?(@artist) %>
        <%= render 'artists/unfollow_button', artist: @artist %>
      <% else %>
        <%= render 'artists/follow_button', artist: @artist %>
      <% end %>
    </div>

    <div class="col-12">
      <div class="mb-3">
        <strong>ユーザー名:</strong>
        <p><%= @artist.name %></p>
      </div>

      <%= link_to '投稿した楽曲一覧', songs_artist_path(@artist), class: "btn btn-primary" %>
    </div>
  </div>
</div>